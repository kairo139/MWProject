<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 툴바 대신 뒤로 가기만 있는 툴바 만들어서 교체 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:id="@+id/tb">
        <!-- 상단 -->
        <include
            android:id="@+id/top"
            layout="@layout/tool_bar" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/birth_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:textStyle="bold"
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/birth_edtyear"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/birth_title"
        />

    <TextView
        android:id="@+id/birth_txtyear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="년"
        app:layout_constraintLeft_toRightOf="@+id/birth_edtyear"
        app:layout_constraintTop_toBottomOf="@id/birth_title"
        android:textSize="30dp"
        />

    <Spinner
        android:id="@+id/birth_spinmonth"
        android:layout_width="80dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toRightOf="@+id/birth_txtyear"
        app:layout_constraintTop_toBottomOf="@id/birth_title"
        />

    <TextView
        android:id="@+id/birth_txtmonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월"
        app:layout_constraintLeft_toRightOf="@+id/birth_spinmonth"
        app:layout_constraintTop_toBottomOf="@id/birth_title"
        android:textSize="30dp"
    />

    <EditText
        android:id="@+id/birth_spinday"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/birth_txtmonth"
        app:layout_constraintTop_toBottomOf="@id/birth_title"
        />

    <TextView
        android:id="@+id/birth_txtday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일"
        app:layout_constraintLeft_toRightOf="@+id/birth_spinday"
        app:layout_constraintTop_toBottomOf="@id/birth_title"
        android:textSize="30dp"
        />

    <Button
        android:id="@+id/g_btnsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/birth_txtday"
        android:layout_marginTop="20dp"
        android:background="@color/SigColor"
        />

    <Button
        android:id="@+id/g_bntcancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        app:layout_constraintRight_toLeftOf="@+id/g_btnsave"
        app:layout_constraintTop_toBottomOf="@id/birth_txtday"
        android:layout_marginTop="20dp"
        android:background="@color/SigColor"
        android:layout_marginRight="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>