<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Ep_imgTitle"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Ep_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/Ep_imgTitle"
        app:layout_constraintTop_toTopOf="@id/Ep_imgTitle" />

    <TextView
        android:id="@+id/Ep_tvCharacter"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/Ep_imgTitle"
        app:layout_constraintTop_toBottomOf="@+id/Ep_tvTitle" />

    <TextView
        android:id="@+id/Ep_tvContent"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/Ep_imgTitle"
        app:layout_constraintTop_toBottomOf="@+id/Ep_tvCharacter" />



    <ListView
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Ep_imgTitle" />




</androidx.constraintlayout.widget.ConstraintLayout>