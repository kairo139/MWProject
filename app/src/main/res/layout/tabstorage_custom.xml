<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    >

    <ImageButton
        android:id="@+id/TabStorageImage"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TabStorageTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="[연플리] - EP1"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/TabStorageImage"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/TabStorageSubTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="남친이 술자리에 여자와 같이 있다."
        app:layout_constraintLeft_toRightOf="@+id/TabStorageImage"
        app:layout_constraintTop_toBottomOf="@+id/TabStorageTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>