<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/Ep_ivThumb"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Ep."
        app:layout_constraintBottom_toBottomOf="@id/Ep_ivThumb"
        app:layout_constraintLeft_toRightOf="@+id/Ep_ivThumb"
        app:layout_constraintTop_toTopOf="@+id/Ep_ivThumb" />

    <TextView
        android:id="@+id/Ep_tvep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 1 "
        app:layout_constraintBottom_toBottomOf="@+id/tv1"
        app:layout_constraintLeft_toRightOf="@+id/tv1"
        app:layout_constraintTop_toTopOf="@+id/tv1" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="] "
        app:layout_constraintBottom_toBottomOf="@+id/Ep_tvep"
        app:layout_constraintLeft_toRightOf="@+id/Ep_tvep"
        app:layout_constraintTop_toTopOf="@+id/Ep_tvep" />

    <TextView
        android:id="@+id/Ep_tvSubTitle"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:text="제목"
        app:layout_constraintBottom_toBottomOf="@+id/tv2"
        app:layout_constraintLeft_toRightOf="@+id/tv2"
        app:layout_constraintTop_toTopOf="@+id/tv2" />


</androidx.constraintlayout.widget.ConstraintLayout>