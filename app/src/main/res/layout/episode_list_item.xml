<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/itemWrap">

        <ImageView
            android:id="@+id/ivThumb"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_close_black_24dp"
            app:layout_constraintLeft_toLeftOf="@+id/itemWrap"
            app:layout_constraintBottom_toBottomOf="@+id/itemWrap" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/ivThumb"
            app:layout_constraintTop_toTopOf="@+id/ivThumb"
            app:layout_constraintRight_toRightOf="@+id/itemWrap"
            app:layout_constraintBottom_toBottomOf="@+id/itemWrap"
            android:id="@+id/tvEP"
            android:text="blabla"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>