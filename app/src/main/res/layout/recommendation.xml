<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvRecom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="어떠신가요?"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibRecom1_1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecom1" />

    <TextView
        android:id="@+id/tvRecom1_1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/ibRecom1_1"
        app:layout_constraintTop_toBottomOf="@+id/tvRecom1" />

    <ImageButton
        android:id="@+id/ibRecom1_2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibRecom1_1" />

    <TextView
        android:id="@+id/tvRecom1_2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/ibRecom1_2"
        app:layout_constraintTop_toBottomOf="@+id/tvRecom1_1" />

    <TextView
        android:id="@+id/tvRecom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="좋아히시나요?"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibRecom1_2" />

    <ImageButton
        android:id="@+id/ibRecom2_1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecom2" />

    <TextView
        android:id="@+id/tvRecom2_1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:text=""
        app:layout_constraintLeft_toRightOf="@+id/ibRecom2_1"
        app:layout_constraintTop_toBottomOf="@+id/tvRecom2" />

</androidx.constraintlayout.widget.ConstraintLayout>